.well.sidebar-nav#sidebar
  ul.nav.nav-list
    li.nav-header categories
    - each cat in getCategories()
      li
        a(href=categoryURL(cat)) #{cat} (#{postsWithCategory(cat).length})
    li.nav-header tags
    - each tag in getTags()
      li
        a(href=tagURL(tag)) #{tag} (#{postsWithTag(tag).length})
